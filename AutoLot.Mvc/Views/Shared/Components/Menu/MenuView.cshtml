@model IEnumerable<Make>
<ul class="dropdown-menu">
    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Cars" asp-action="Index">All</a></li>
    @foreach (var item in Model)
    {
        <li><a class="dropdown-item text-dark" asp-controller="Cars" asp-action="ByMake" asp-route-makeId="@item.Id" asp-route-makeName="@item.Name">@item.Name</a></li>
    }
</ul>